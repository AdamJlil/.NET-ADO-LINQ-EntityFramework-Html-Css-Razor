@model WebApplication1.Models.Inscription

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inscription</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <style>

        * {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        h3 {
            text-align: center;
            font-size: 100%;
        }

        button {
            margin-top: 25px;
        }

        form {
            
            padding: 0px 40px 0px;
            
        }

        section {
            height: 10px;
        }
    </style>
</head>
<body>
    
        <div class="relative min-h-screen
         bg-gray-50  bg-gray-500 bg-no-repeat bg-cover relative"
             style="background-image: url(https://images.pexels.com/photos/2041540/pexels-photo-2041540.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1);">
            <div class="w-1/3 min-h-screen bg-black/[.8] flex flex-col justify-center float-right">
                <form class="w-full h-auto float-right " action="/Student/Inscription" method="POST">

                   

                    <h3 class="text-3xl tracking-wider tracking-widest mb-6 text-white font-bold">Sign Up</h3>

                    <div class="relative">
                        <div class="absolute right-0 mt-4">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="h-6 w-6 text-green-500" fill="none" opacity="0" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <label class="text-sm font-bold text-white tracking-wide">First Name</label>
                        <input class=" w-full text-white bg-transparent text-base py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500" type="text" name="nom" placeholder="Enter First Name" />


                    </div>

                    <div class="mt-8 content-center">
                        <label class="text-sm font-bold text-white tracking-wide">
                            Second Name
                        </label>
                        <input class="w-full content-center text-white bg-transparent text-base py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500" type="text" placeholder="Enter Second Name" name="prenom" />
                    </div>


                    <div class="mt-8 content-center">

                        <label class="text-sm font-bold text-white tracking-wide">Email</label>
                        <input class=" w-full text-white bg-transparent text-base py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500" type="email" placeholder="Enter Email" name="email" />

                    </div>

                    <div class="mt-8 content-center">

                        <label class="text-sm font-bold text-white tracking-wide">Level Of Educaton</label>

                        <select class=" w-full text-white bg-black/[.8] text-base py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500" name="nivEduc">

                            @foreach (String element in ViewBag.arrayEduc)
                            {
                                <option value="@element">@element</option>
                            }
                        </select>

                    </div>





                    <button class="w-full flex mt-10 justify-center bg-indigo-500 text-gray-100 p-4  rounded-full tracking-wide
                    font-semibold  focus:outline-none focus:shadow-outline hover:bg-indigo-600 shadow-lg cursor-pointer transition ease-in duration-300"
                            type="submit" name="btnSubmit">
                        Sign Up
                    </button>

                    <p class="flex flex-col items-center justify-center mt-10 text-center text-md text-gray-500">
                        <span>I already have an account.</span>
                        <a href="/Student/Index" class="text-indigo-500  hover:text-indigo-500no-underline hover:underline cursor-pointer transition ease-in duration-300">Sign In</a>
                    </p>

                </form>
            </div>
    </div>

</body>
</html>
