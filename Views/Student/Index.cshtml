@model WebApplication1.Models.login
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Login</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet">
    <style>

        * {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        h3 {
            text-align: center;
            font-size: 100%;
        }

        button {
            margin-top: 25px;
        }

        form {
            
            padding: 0px 40px 0px;
            
            
            
        }

        section {
            height: 10px;
        }
    </style>
</head>
<body>
    <div class="relative min-h-screen bg-gray-500 bg-no-repeat bg-cover relative "
	style="background-image: url(https://images.pexels.com/photos/5759484/pexels-photo-5759484.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1);">


        <div class="w-1/3 min-h-screen bg-black/[.8] flex flex-col justify-center float-right">
            <form class="w-full h-auto float-right " action="/Student/Index" method="post">

                <h3 class="text-3xl tracking-wider tracking-widest mb-6 text-white font-bold">Login</h3>
                <div class="relative">
                    <div class="absolute right-0 mt-4">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="h-6 w-6 text-green-500" fill="none" opacity="0" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <label class="text-sm font-bold text-white tracking-wide">Username</label>
                    <input class=" w-full text-white bg-transparent text-base py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500" type="text" placeholder="Username" name="username" />

                </div>
                <div class="mt-8 content-center">
                    <label class="text-sm font-bold text-white tracking-wide">
                        Password
                    </label>
                    <input class="w-full content-center bg-transparent text-base py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500" type="password" placeholder="Password" name="password" />
                </div>
                <section>
                </section>
                <div>
                    <button class="w-full flex mt-10 justify-center bg-indigo-500 text-gray-100 p-4  rounded-full tracking-wide
                                font-semibold  focus:outline-none focus:shadow-outline hover:bg-indigo-600 shadow-lg cursor-pointer transition ease-in duration-300" type="submit" value="Connect" name="btnSubmit">
                        Connect
                    </button>
                </div>
                <p class="flex flex-col items-center justify-center mt-10 text-center text-md text-gray-500">
                    <span>Don't have an account?</span>
                    <a href="/Student/Inscription" class="text-indigo-500  hover:text-indigo-500no-underline hover:underline cursor-pointer transition ease-in duration-300">Sign up</a>
                    <label class="text-red-600 font-bold">@ViewBag.msg</label>
                </p>
                
            </form>
        </div>


    </div>
</body>



</html>
