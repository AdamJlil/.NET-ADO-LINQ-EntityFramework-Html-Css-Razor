


@{
    Layout = null;
}
@model IEnumerable<WebApplication1.Models.cours>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SecondLogin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <style>

        * {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            letter-spacing: 2px;
        }

        #section1 {
            background-image: url(https://images.pexels.com/photos/2041540/pexels-photo-2041540.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1);
        }

    </style>
</head>
<body>



    <div id="section1" class="relative h-screen w-full flex flex-col
         bg-gray-50  bg-gray-500 bg-no-repeat bg-cover relative contrast-120 brightness-90">

        <nav class="flex w-full h-1/6 mt-10 justify-between bg-red" ">
            <h1 class="font-bold text-white text-3xl ml-20"> LOGO </h1>
            <a href="/Student/Index" class="font-bold text-white text-2xl mr-20 ">Disconnect</a>
        </nav>

        <div class="text-white text-center flex flex-col justify-center items-center w-full h-5/6 mb-36">
            <h1 class="text-white font-bold text-3xl drop-shadow-3xl ">UNIVERSITY Logos</h1>
            <p class="text-white/[0.8] text-base mb-4 text-xl font-bold drop-shadow-xl">You are in the COURSES section.</p>
        </div>

    </div>

    @using (Html.BeginForm("SecondLogin", "Student", FormMethod.Post, new { @class = "tailwind" }))
    {

        <div class="relative min-h-screen flex flex-col items-center justify-around bg-black ">
            <h2 class="text-white font-bold text-2xl">
                COURSES AVAILABLE
            </h2>



            @foreach (var i in Model)
            {
             <div class="w-full flex justify-around flex-nowrap">

                <div class="rounded-lg shadow-lg bg-black max-w-sm">
                    <a href="#!" data-mdb-ripple="true" data-mdb-ripple-color="light" class="w-full h-1/3">
                        <img class="rounded-t-lg object-cover" src="~/images/@i.image" />
                    </a>
                    <div class="p-6">
                        <h3 class="text-white text-xl font-bold mb-2">@i.nom</h3>

                        <p class="text-white text-base mb-4">@i.desc</p>

                        

                            <!-- Modal toggle -->
                            <button type="submit" name="btnCour" value="@i.idCours" data-bs-toggle="modal" data-bs-target="#exampleModalScrollable"
                                    class=" inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"
                                    >
                                Learn more
                            </button>


                            </div>
                            


                        </div>
                    

                </div>
            

            }
            






        </div>
    }






    </body>
</html>
